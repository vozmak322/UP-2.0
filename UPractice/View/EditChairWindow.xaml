<Window x:Class="UPractice.View.EditChairWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UPractice.View"
        mc:Ignorable="d"
        Title="EditChairWindow" Height="223.371" Width="275.354">
    <Grid>
        <Button Content="Изменить" Margin="10,134,0,0"
                Command="{Binding EditChair}" Click="Button_Click" Height="38" VerticalAlignment="Top" HorizontalAlignment="Left" Width="247"/>
        <Label Content="Name of Chair" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.469,0.448" Height="26" Width="99"/>
        <TextBox Height="23" Margin="0,0,10,133" TextWrapping="Wrap" VerticalAlignment="Bottom"
                 Text="{Binding NameChair}" x:Name="NameField" HorizontalAlignment="Right" Width="247"/>
        <Label Content="Short name of Chair" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.469,0.448" Height="26" Width="132"/>
        <TextBox HorizontalAlignment="Right" Height="23" Margin="0,0,10,79" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="247"
                 Text="{Binding ShortNameChair}"/>
    </Grid>
</Window>
